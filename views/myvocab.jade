doctype html(lang='en')
head
    meta(http-equiv='content-type', content='text/html; charset=UTF-8')
    | &#x9;&#x9;
    meta(charset='utf-8')
    | &#x9;&#x9;
    title Bootstrap 3 Control Panel
    | &#x9;&#x9;
    meta(name='generator', content='Bootply')
    | &#x9;&#x9;
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
    link(href='stylesheets/bootstrap.min.css', rel='stylesheet')
    link(href='stylesheets/chosen.css', rel='stylesheet')
    link(href='stylesheets/prism.css', rel='stylesheet')
    link(href='stylesheets/bootstrap-tagsinput.css', rel='stylesheet')
    - var sent_arr = key
  body
    // Header
    #top-nav.navbar.navbar-inverse.navbar-static-top
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.icon-toggle
          |       
          a.navbar-brand(href='#') Control Panel
        |     
        .navbar-collapse.collapse
          ul.nav.navbar-nav.navbar-right
            li.dropdown
              a.dropdown-toggle(role='button', data-toggle='dropdown', href='#')
                i.glyphicon.glyphicon-user
                |  Admin 
                span.caret
              |           
              ul#g-account-menu.dropdown-menu(role='menu')
                li
                  a(href='#') My Profile
                |             
                li
                  a(href='#')
                    i.glyphicon.glyphicon-lock
                    |  Logout
      // /container
    // /Header
    // Main
    .container
      // upper section
      .row
        .col-sm-3
          // left
          h3
            i.glyphicon.glyphicon-briefcase
            |  Toolbox
          |       
          hr
          |       
          |       
          ul.nav.nav-stacked
            li
              a(href='/add')
                i.glyphicon.glyphicon-flash
                |  AddSentence
            |         
            li
              a(href='javascript:;')
                i.glyphicon.glyphicon-link
                |  MySentences
            |         
            li
              a(href='javascript:;')
                i.glyphicon.glyphicon-list-alt
                |  MyWords
            |         
            li
              a(href='javascript:;')
                i.glyphicon.glyphicon-book
                |  FlashCards
          |       
          |       
        .col-sm-9
          .col-md-12
            hr
            |       
            a(href='#')
              strong
                i.glyphicon.glyphicon-list-alt
                |  Your saved sentences
             
          .col-md-8
            table.table.table-striped
              thead
                tr
                  th Sentence
                  th Tags
                  th Date Saved
              |         
              tbody
                each sent in sent_arr
                  -var sent1 = sent
                  tr
                    td=sent1.sentence
                    td=sent1.tags
                    td=sent1.Date
                |           
            |       
            |       
          
    footer.text-center
      | This Bootstrap 3 dashboard layout is compliments of 
      a(href='http://www.bootply.com/85850')
        strong Bootply.com
    #addWidgetModal.modal
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-hidden='true') &times;
            |         
            h4.modal-title Add Widget
          |       
          .modal-body
            p Add a widget stuff here..
          |       
          .modal-footer
            a.btn(href='#') Close
            |         
            a.btn.btn-primary(href='#') Save changes
        // /.modal-content
      // /.modal-dalog
    // /.modal
    // script references
    script(src='//ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js')
    | &#x9;&#x9;
    script(src='js/bootstrap.min.js')
